17.
create table tracks ( name varchar(20), id_tra int);
insert into tracks values ('dotnet', 1), ('PHP',2), ('frontEnd', 3),('socialMedia',4);
mysql> alter table student add column id_tra int;
mysql> alter table tracks add primary key (id_tra);
alter table student add constraint FK_id_tra foreign key (id_tra) references tracks(id_tra);

update student set id_tra =2 where id_student = 1 ;
update student set id_tra =3 where id_student = 2 ;
update student set id_tra =4 where id_student =3 ;
update student set id_tra =1 where id_student =4 ;

create view display_track_student as select first_name, tracks.name from student,tracks w
here student.id_tra = tracks.id_tra;


