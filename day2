18.

mysql> alter table subject add column id_tra int ;
ALTER TABLE subject ADD CONSTRAINT fk_tra_sub FOREIGN KEY (id_tra) REFERENCES tracks(id_tra) ON DELETE RESTRICT

mysql> update subject set id_tra =2 where id_sub = 1 ;
mysql> update subject set id_tra =1 where id_sub = 2 ;
mysql> update subject set id_tra =4 where id_sub = 3 ;


create view display_track_subject as select subject.name as name_sub, tracks.name as name_tra from subject,tracks where subject.id_tra = tracks.id_tra;



