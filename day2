20.

create view display_student_subject_score select  student.first_name, subject.name, exame.score from student inner join exame inner join subject inner join achieve_score on student.id_student = achieve_score.id_stud and exame.ex_id = achieve_score.ex_id and subject.id_sub=achieve_score.id_sub;


-------------------------------------------------------------------------

21. 
create temporary view display_subject_maxscore as select name, max_score from subject;


