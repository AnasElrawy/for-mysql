 mysql> ALTER TABLE achieve_score ADD CONSTRAINT fk_ex_id_sc FOREIGN KEY (ex_id) REFERENCES exame(ex_id) ON DELETE CASCADE;

 ALTER TABLE achieve_score ADD CONSTRAINT fk_stud_id_sc FOREIGN KEY (id_stud) REFERENCES student(id_student) ON DELETE CASCADE;
 
 ALTER TABLE achieve_score ADD CONSTRAINT fk_sub_id_sc FOREIGN KEY (id_sub) REFERENCES subject(id_sub) ON DELETE CASCADE;
 
 ALTER TABLE sut_has_sub ADD CONSTRAINT fk_sub_id FOREIGN KEY (id_sup) REFERENCES subject(id_sub) on DELETE CASCADE;
 
 ALTER TABLE sut_has_sub ADD CONSTRAINT fk_sub_id_has FOREIGN KEY (id_sup) REFERENCES subject(id_sub) on delete cascade;
 
 ALTER TABLE sut_has_sub ADD CONSTRAINT fk_student_id_has FOREIGN KEY (id_student) REFERENCES student(id_student) on delete cascade;

ALTER TABLE phone ADD CONSTRAINT fk_student_id FOREIGN KEY (id_student) REFERENCES student(id_student) on delete cascade;
